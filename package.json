  "scripts": {
    "clean": "yarn clean:client && yarn clean:server",
    "clean:client": "rimraf _client && mkdirp _client",
    "clean:server": "rimraf _server",
    "build": "yarn build:client && yarn build:server",
    "build:client": "yarn clean:client && cross-env NODE_ENV=production webpack --config webpack.client.js --profile --json > ./_client/stats.json",
    "build:server": "yarn clean:server && cross-env NODE_ENV=production webpack --config webpack.server.js",
    "build:node": "babel ./server/ --out-dir ./_server/ --ignore ./server/render.js ./server/serverStore.js",
    "serve": "cross-env NODE_ENV=production PORT=8081 node ./server/server.js",
    "start": "yarn clean && cross-env NODE_ENV=development node ./server/server.js",
    "test": "jest",
    "lint": "eslint --quiet server src",
    "cz": "git-cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test",
      "pre-push": "yarn cz"
    }
  }
